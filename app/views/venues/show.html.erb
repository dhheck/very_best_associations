<div class="page-header">
  <h3>Venue #<%= @venue.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @venue.name %></dd>

      <dt>Address</dt>
      <dd><%= @venue.address %></dd>

      <dt>Neighborhood</dt>
      <dd><%= @venue.neighborhood.name %></dd>

      <dt>Favorites</dt>
      <dd>
      <ul class="list-group">
      <% @venue.favorites.each do |fave| %>
          <li class="list-group-item">
            <a href="/venues/<%= fave.dish.id %>"><%= fave.dish.name %></a>
            by
            <a href="/venues/<%= fave.user.id %>"><%= fave.user.username %></a>
          </li>
      <% end %>
        </ul>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/venues" class="btn btn-primary">
        Back
      </a>
      <a href="/venues/<%= @venue.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_venue/<%= @venue.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
